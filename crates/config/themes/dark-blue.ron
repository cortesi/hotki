// Dark Blue theme for Hotki
// A soothing dark theme with blue accents
(
    hud: (
            pos: center,
            font_size: 16.0,
            
            // Dark blue color scheme
            title_fg: "#a0c4ff",  // Light blue
            bg: "#0a1628",        // Very dark blue
            key_fg: "#ffffff",
            key_bg: "#1e3a5f",    // Dark blue
            mod_fg: "#a0c4ff",
            mod_bg: "#2c5282",    // Medium blue
            tag_fg: "#63b3ed",    // Sky blue
            opacity: 0.95,
    ),

    notify: (
            width: 420.0,
            pos: r,
            opacity: 0.9,
            timeout: 4.0,
            buffer: 200,
            
            info: (
                bg: "#1a365d",
                title_fg: "#a0c4ff",
                title_font_weight: bold,
                body_fg: "#a0c4ff",
            ),
            warn: (
                bg: "#451a03",
                title_fg: "#fbbf24",
                title_font_weight: bold,
                body_fg: "#fbbf24",
            ),
            error: (
                bg: "#450a0a",
                title_fg: "#f87171",
                title_font_weight: bold,
                body_fg: "#f87171",
            ),
            success: (
                bg: "#052e16",
                title_fg: "#86efac",
                title_font_weight: bold,
                body_fg: "#86efac",
            ),
    ),
)
